#!/bin/bash

## Dominios
# unam.mx
# pemex.com
# gob.mx
# ipn.mx
# ips

## Comandos:
# Ping
# nslookup
#traceroute
#whois
#sublist3r
#subfinder
#findomain
#dnsmap
#dnsrecon
#Nmap
#EtherApe

IFS=$'\n'

ping -c1 $1 > /dev/null
if [ ! $? -eq 0 ]; then
    echo "No se pudo conectar a $1"
else
    echo "Continuamos"
    # Proceso de info    
    for i in $(whois  $1 -H -B); do
	if [ ${i:0:1} != "%" ]; then	    
	    echo "$i"
	fi
    done
fi
